.container
  .devise
    %h2
      アカウント設定変更
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = render "devise/commons/email", f: f
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      = render "devise/commons/new-password", f: f
      = render 'devise/commons/password-confirmation', f: f
      = render 'devise/commons/current-password', f: f
      .btn
        = f.submit "更新する", class: "btn_submit"
    = link_to "アカウント削除", registration_path(resource_name), data: { turbo_confirm: "Are you sure?", method: :delete}, class: "account_destroy"