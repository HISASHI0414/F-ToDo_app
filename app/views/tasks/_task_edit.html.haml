- if user_signed_in? && current_user.has_writtern_task?(task)
  .task_detail_actions
    .dropdown
      = image_tag 'actions.svg', class: 'dropbtn'
      .dropdown-content.mini
        = link_to "編集する", edit_board_task_path(board_id: task.board.id, id: task.id)
        = link_to "削除する",  board_task_path(board_id: task.board.id, id: task.id), data: { turbo_method: :delete, turbo_confirm: "本当に削除してもよろしいですか？"}